<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MauiBankApp.ViewModels"
             xmlns:controls="clr-namespace:MauiBankApp.Controls"
             x:Class="MauiBankApp.Views.LoginPage"
             x:DataType="viewmodels:LoginViewModel"
             Title="">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="30">

            <!-- Header -->
            <VerticalStackLayout Spacing="12" HorizontalOptions="Center">
                <Frame HasShadow="True"
                       Padding="0"
                       BackgroundColor="Transparent"
                       HorizontalOptions="Center">
                    <Image Source="bank_logo.png"
                           HeightRequest="77"
                           WidthRequest="77"
                           Aspect="AspectFit"/>
                </Frame>

                <Label Text="Welcome"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="#263238"
                       HorizontalOptions="Center"/>

                <Label Text="Sign in to your account"
                       FontSize="15"
                       TextColor="#607D8B"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- Biometric Login Section (shown when fingerprint is enabled) -->
            <Frame Padding="20"
                   CornerRadius="16"
                   BackgroundColor="#E8F5E9"
                   HasShadow="True"
                   IsVisible="{Binding IsBiometricEnabled}">
                <VerticalStackLayout Spacing="15">
                    <Label Text="ðŸ” Quick Login"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#2E7D32"
                           HorizontalOptions="Center"/>

                    <Label Text="{Binding SavedUserEmail, StringFormat='Logged in as: {0}'}"
                           FontSize="13"
                           TextColor="#558B2F"
                           HorizontalOptions="Center"
                           IsVisible="{Binding SavedUserEmail, Converter={StaticResource StringNotEmptyConverter}}"/>

                    <!-- Fingerprint Scanner for Login -->
                    <controls:FingerprintScannerControl 
                        x:Name="LoginFingerprintScanner"
                        HeightRequest="220"
                        Margin="0,10,0,10"/>

                    <Button Text="Tap to Scan Fingerprint"
                            Command="{Binding LoginWithBiometricCommand}"
                            IsEnabled="{Binding IsNotBusy}"
                            BackgroundColor="#4CAF50"
                            TextColor="White"
                            CornerRadius="12"
                            HeightRequest="52"
                            FontSize="16"
                            FontAttributes="Bold"
                            Margin="0,0,0,0"/>

                    <Label Text="or login with password below"
                           FontSize="12"
                           TextColor="#607D8B"
                           HorizontalOptions="Center"
                           Opacity="0.7"
                           Margin="0,5,0,0"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Login Card -->
            <Frame Padding="24"
                   CornerRadius="16"
                   BackgroundColor="White"
                   HasShadow="True">

                <VerticalStackLayout Spacing="18">

                    <!-- Email -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Email"
                               FontSize="13"
                               TextColor="#455A64"/>

                        <Frame Padding="10"
                               CornerRadius="10"
                               BorderColor="#CFD8DC">
                            <Entry Text="{Binding Email}"
                                   Placeholder="Enter your email"
                                   TextColor="#263238"
                                   PlaceholderColor="#90A4AE"
                                   Keyboard="Email"
                                   IsEnabled="{Binding IsNotBusy}"/>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- Password -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Password"
                               FontSize="13"
                               TextColor="#455A64"/>

                        <Frame Padding="10"
                               CornerRadius="10"
                               BorderColor="#CFD8DC">
                            <Entry Text="{Binding Password}"
                                   Placeholder="Enter your password"
                                   TextColor="#263238"
                                   PlaceholderColor="#90A4AE"
                                   IsPassword="True"
                                   IsEnabled="{Binding IsNotBusy}"/>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- Error Message -->
                    <Label Text="{Binding ErrorMessage}"
                           TextColor="#C62828"
                           FontSize="14"
                           HorizontalTextAlignment="Center"
                           IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}"/>

                    <!-- Login Button -->
                    <Button Text="Sign In"
                            Command="{Binding LoginCommand}"
                            IsEnabled="{Binding IsNotBusy}"
                            BackgroundColor="#455A64"
                            TextColor="White"
                            CornerRadius="12"
                            HeightRequest="52"
                            FontSize="16"
                            FontAttributes="Bold"/>

                    <!-- Loading Indicator -->
                    <ActivityIndicator IsRunning="{Binding IsBusy}"
                                       IsVisible="{Binding IsBusy}"
                                       Color="#455A64"
                                       HorizontalOptions="Center"/>

                </VerticalStackLayout>
            </Frame>

            <!-- Biometric Setup Hint (shown when biometric available but not enabled) -->
            <Frame Padding="16"
                   CornerRadius="12"
                   BackgroundColor="#FFF3E0"
                   HasShadow="False"
                   IsVisible="{Binding IsBiometricAvailable}">
                <VerticalStackLayout Spacing="8">
                    <Label Text="ðŸ’¡ Tip"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#E65100"/>
                    <Label Text="Enable fingerprint login in Security Settings for faster access"
                           FontSize="12"
                           TextColor="#BF360C"
                           LineBreakMode="WordWrap"/>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
