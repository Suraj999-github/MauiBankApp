<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MauiBankApp.ViewModels"
             xmlns:models="clr-namespace:MauiBankApp.Models"
             xmlns:converters="clr-namespace:MauiBankApp.Converters"
             x:Class="MauiBankApp.Views.TransactionHistoryPage"
             x:DataType="viewmodels:TransactionHistoryViewModel"
             Title="">

    <ContentPage.Resources>
        <converters:TransactionTypeToColorConverter x:Key="TransactionTypeToColorConverter" />
        <converters:TransactionTypeToIconConverter x:Key="TransactionTypeToIconConverter" />
        <converters:TransactionAmountFormatConverter x:Key="TransactionAmountFormatConverter" />
        <converters:StatusToColorConverter x:Key="StatusToColorConverter" />

        <Style TargetType="Frame">
            <Setter Property="HasShadow" Value="True" />
            <Setter Property="BackgroundColor" Value="White" />
            <Setter Property="CornerRadius" Value="15" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0,0,0,15" />
        </Style>
    </ContentPage.Resources>

    <RefreshView IsRefreshing="{Binding IsBusy}"
                 Command="{Binding LoadTransactionsCommand}">
        <ScrollView>
            <VerticalStackLayout Spacing="0" Padding="20">

                <!-- Header -->
                <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,20">
                    <!--<VerticalStackLayout Grid.Column="0" Spacing="5">
                        <Label Text="Transaction History" 
                               FontSize="14" 
                               FontAttributes="Bold"
                               TextColor="#37474F"/>
                        <Label Text="Transaction History"
                               FontSize="14"
                               TextColor="#78909C"/>
                    </VerticalStackLayout>-->

                    <!-- Filter Button -->
                    <Frame Grid.Column="1"
                           CornerRadius="12"
                           BackgroundColor="#ECEFF1"
                           Padding="10"
                           HeightRequest="40"
                           WidthRequest="40"
                           VerticalOptions="Center">
                        <Image Source="filter.png"
                               HeightRequest="20"
                               WidthRequest="20"/>
                    </Frame>
                </Grid>

                <!-- Summary Stats -->
                <Frame Padding="15" Margin="0,0,0,20">
                    <Grid ColumnDefinitions="*,*,*">
                        <VerticalStackLayout Grid.Column="0" Spacing="5" HorizontalOptions="Center">
                            <Label Text="Total"
                                   FontSize="12"
                                   TextColor="#78909C"
                                   HorizontalOptions="Center"/>
                            <Label Text="{Binding Transactions.Count, StringFormat='{0}'}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#37474F"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>

                        <BoxView Grid.Column="1" 
                                 WidthRequest="1" 
                                 Color="#E0E0E0"
                                 VerticalOptions="Fill"/>

                        <VerticalStackLayout Grid.Column="2" Spacing="5" HorizontalOptions="Center">
                            <Label Text="This Month"
                                   FontSize="12"
                                   TextColor="#78909C"
                                   HorizontalOptions="Center"/>
                            <Label Text="20"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#37474F"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Grid>
                </Frame>

                <!-- Loading Indicator -->
                <ActivityIndicator IsRunning="{Binding IsBusy}" 
                                 IsVisible="{Binding IsBusy}"
                                 HorizontalOptions="Center"
                                 Color="#546E7A"
                                 HeightRequest="50"
                                 WidthRequest="50"
                                 Margin="0,20,0,20"/>

                <!-- Empty State -->
                <VerticalStackLayout HorizontalOptions="Center" 
                                   VerticalOptions="Center"
                                   Spacing="15"
                                   Padding="40"
                                   IsVisible="{Binding ShowEmptyState}">
                    <Frame CornerRadius="25"
                           BackgroundColor="#ECEFF1"
                           HeightRequest="80"
                           WidthRequest="80"
                           Padding="20"
                           HorizontalOptions="Center">
                        <Image Source="transaction.png"
                               HeightRequest="40"
                               WidthRequest="40"/>
                    </Frame>
                    <VerticalStackLayout Spacing="5">
                        <Label Text="No transactions yet"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#37474F"
                               HorizontalOptions="Center"/>
                        <Label Text="Your transaction history will appear here once you start using your account"
                               FontSize="14"
                               TextColor="#78909C"
                               HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>
                    <Button Text="Refresh"
                            Command="{Binding LoadTransactionsCommand}"
                            BackgroundColor="#546E7A"
                            TextColor="White"
                            HorizontalOptions="Center"
                            WidthRequest="120"
                            Margin="0,10,0,0"/>
                </VerticalStackLayout>

                <!-- Transactions List -->
                <CollectionView ItemsSource="{Binding Transactions}"
                              IsVisible="{Binding IsNotBusy}"
                              SelectionMode="None"
                              Margin="0,10,0,0">

                    <!--<CollectionView.GroupHeaderTemplate>
                        <DataTemplate>
                            <VerticalStackLayout Spacing="10" Padding="0,20,0,10">
                                <Label Text="{Binding Key, StringFormat='{0:MMMM yyyy}'}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#37474F"
                                       Margin="15,0,0,0"/>
                                <BoxView HeightRequest="1" Color="#E0E0E0"/>
                            </VerticalStackLayout>
                        </DataTemplate>
                    </CollectionView.GroupHeaderTemplate>-->

                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:Transaction">
                            <Frame>
                                <Grid ColumnDefinitions="Auto,*,Auto"
                                      RowDefinitions="Auto,Auto"
                                      Padding="15"
                                      ColumnSpacing="15"
                                      RowSpacing="8">

                                    <!-- Icon -->
                                    <Frame Grid.Row="0" Grid.RowSpan="2" Grid.Column="0"
                                           CornerRadius="12"
                                           BackgroundColor="#ECEFF1"
                                           HeightRequest="50"
                                           WidthRequest="50"
                                           Padding="12"
                                           VerticalOptions="Center">
                                        <Image Source="{Binding Type, Converter={StaticResource TransactionTypeToIconConverter}}"
                                               HeightRequest="25"
                                               WidthRequest="25"/>
                                    </Frame>

                                    <!-- Top Row: Description and Amount -->
                                    <Grid Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"
                                          ColumnDefinitions="*,Auto">

                                        <VerticalStackLayout Grid.Column="0" Spacing="2">
                                            <Label Text="{Binding Description}"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   TextColor="#37474F"
                                                   LineBreakMode="TailTruncation"/>
                                            <Label Text="{Binding Date, StringFormat='{0:MMM dd, yyyy}'}"
                                                   FontSize="12"
                                                   TextColor="#78909C"/>
                                        </VerticalStackLayout>

                                        <Label Grid.Column="1"
                                               Text="{Binding Amount, Converter={StaticResource TransactionAmountFormatConverter}, ConverterParameter={Binding Type}}"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               TextColor="{Binding Type, Converter={StaticResource TransactionTypeToColorConverter}}"
                                               VerticalOptions="Start"/>
                                    </Grid>

                                    <!-- Bottom Row: Recipient, Status, and Time -->
                                    <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                                          ColumnDefinitions="*,Auto">

                                        <VerticalStackLayout Grid.Column="0" Spacing="2">
                                            <Label Text="{Binding Recipient, StringFormat='To: {0}'}"
                                                   FontSize="13"
                                                   TextColor="#546E7A"
                                                   LineBreakMode="TailTruncation"/>
                                            <HorizontalStackLayout Spacing="5">
                                                <Frame CornerRadius="8"
                                                       BackgroundColor="Transparent"
                                                       Padding="6,2"
                                                       BorderColor="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                                       HasShadow="False">
                                                    <Label Text="{Binding Status}"
                                                           FontSize="10"
                                                           TextColor="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                                           TextTransform="Uppercase"/>
                                                </Frame>
                                            </HorizontalStackLayout>
                                        </VerticalStackLayout>

                                        <Label Grid.Column="1"
                                               Text="{Binding Date, StringFormat='{0:hh:mm tt}'}"
                                               FontSize="12"
                                               TextColor="#78909C"
                                               VerticalOptions="End"/>
                                    </Grid>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Footer -->
                <VerticalStackLayout Spacing="15" Margin="0,30,0,20" IsVisible="{Binding IsNotBusy}">
                    <BoxView HeightRequest="1" Color="#E0E0E0"/>
                    <Label Text="End of transactions"
                           FontSize="14"
                           TextColor="#78909C"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </RefreshView>
</ContentPage>