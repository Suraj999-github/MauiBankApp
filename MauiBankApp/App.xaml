<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="MauiBankApp.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiBankApp"
    xmlns:converters="clr-namespace:MauiBankApp.Converters">

    <Application.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Colors -->
            <Color x:Key="Primary">#007AFF</Color>
            <Color x:Key="Secondary">#6C757D</Color>
            <Color x:Key="Success">#28A745</Color>
            <Color x:Key="Danger">#DC3545</Color>
            <Color x:Key="Warning">#FFC107</Color>
            <Color x:Key="Info">#17A2B8</Color>
            <Color x:Key="Light">#F8F9FA</Color>
            <Color x:Key="Dark">#343A40</Color>

            <!-- Converters -->
            <converters:StringToBoolConverter x:Key="StringToBoolConverter" />
            <converters:TransactionTypeToColorConverter x:Key="TransactionTypeToColorConverter" />

        </ResourceDictionary>
    </Application.Resources>
</Application>
